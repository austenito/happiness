.container
  .row
    .col-sm-12
      = form_for :survey do |f|
        = f.submit "Create survey", class: 'btn btn-primary'

  .row
    .col-sm-12
      .happiness-per-day(ng-controller='dayChartsController')
        .happiness-per-day-chart{'bar-chart' => '', 'chart-data' => 'chartData', 'chart-type' => 'day', title: 'How do you feel each day?', min: 0, max: 10 }
      .happiness-per-place(ng-controller='placeChartsController')
        .happiness-per-place-chart{'bar-chart' => '', 'chart-data' => 'chartData', 'chart-type' => 'place', title: 'Where do you feel the best?', min: 0, max: 10 }


.container
  .row
    .col-sm-12
      %h2 Sign up
      = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = f.error_notification
        .form-inputs
          = f.input :email, required: true, autofocus: true, wrapper_class: 'input-group', input_html: { class: 'form-control' }
          = f.input :password, required: true, wrapper_class: 'input-group', input_html: { class: 'form-control' }
          = f.input :password_confirmation, required: true, wrapper_class: 'input-group', input_html: { class: 'form-control' }
        .form-actions
          = f.button :submit, "Sign up", class: 'btn btn-primary'
      = render "devise/shared/links"
